Product Of Digit

    import java.util.Scanner;
class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int product = 1 ;
        while (n>0)
        {
            int digit = n%10;
            product= product * digit;
            n = n/10;
        }
        System.out.print(product);
    }
}


***********************************************************______________******************************

Reverse
    
    import java.util.Scanner;
class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int rev = 0 ;
        while (n>0)
        {
            int digit = n%10;
            rev = rev * 10 + digit;
            n = n/10;
        }
        System.out.print(rev);
    }
}


***********************************************************______________******************************

Pallindrome

 import java.util.Scanner;
class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int n = sc.nextInt();
        int rev = 0 ;
        int temp = n;
        while (n>0)
        {
            int digit = n%10;
            rev = rev * 10 + digit;
            n = n/10;
        }
        System.out.println(rev);
        if(temp==rev)
        {
            System.out.println("Palindrome");
        }
        else
        {
            System.out.println("Not A Palindrome");
        }
    }
}
    
